<!DOCTYPE html>
<html>
  <head>
    <title>WoWGroups</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <% if @js_pack_tag %>
      <%= stylesheet_pack_tag @js_pack_tag[:css], 'data-turbolinks-track': 'reload', async: true %>
      <%= javascript_pack_tag @js_pack_tag[:js], 'data-turbolinks-track': 'reload', async: true %>
    <% end %>
    <script defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"></script>

    <script type="application/ld+json">
    {
        "@context": "http://schema.org",
        "@type": "WebPage",
        "name": "World of Warcraft Groups",
        "description": "World of Warcraft Groups is here to help you setup groups in Classic without you having to spend all of your time in town spamming for groups so you can get back to questing or an alt while your group fills."
    }
    </script>

    <% unless Rails.env == "development" || @no_analytics %>
      <!-- Global site tag (gtag.js) - Google Analytics -->
      <script async src="https://www.googletagmanager.com/gtag/js?id=UA-138906419-4"></script>
      <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());

        gtag('config', 'UA-138906419-4');
      </script>
    <% end %>

    <script data-ad-client="ca-pub-5374261406606651" async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
  </head>

  <body>
    <%= render 'layouts/header' %>
    <%= yield %>
    <%= render 'layouts/footer' %>
  </body>
</html>
