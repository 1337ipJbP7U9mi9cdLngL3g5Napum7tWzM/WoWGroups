  <div class="group__time column is-1 has-text-centered">
    <%= time_ago_in_words(Time.new - 1.hour) %>
  </div>
  <div class="column columns is-3 has-text-centered">
    <div class="group__server column">
      <%= Server.first.name %>
    </div>
    <div class="group__type column">
      Dungeon
    </div>
    <div class="group__faction column">
      Alliance
